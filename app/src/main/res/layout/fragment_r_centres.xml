<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".R_centres"
    android:background="@mipmap/rna_back"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=" يمكن تقديم طلبات التسجيل والتشطيب والتحيين على مستوى: \n -المديريات الإقليمية للفلاحة(DPA): "
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnElJadida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/location_svg"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners_button"
        android:text="الجديدة"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btncasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="البيضاء"
        app:layout_constraintEnd_toStartOf="@+id/btnElJadida"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnbnsliman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="بنسليمان"
        app:layout_constraintEnd_toStartOf="@+id/btncasa"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnsettat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="سطات"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnbnsliman"
        app:layout_constraintTop_toBottomOf="@+id/btncasa" />

    <Button
        android:id="@+id/btnbarrchid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="برشيد"
        app:layout_constraintEnd_toStartOf="@+id/btnsettat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncasa" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="-المقاطعات التابعة للمكاتب الوطنية للاستثمار الفلاحي لدكالة (ORMVAD) :"
        android:background="@drawable/rounded_corners_button"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsettat" />

    <Button
        android:id="@+id/btnkhmis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="خميس \n الزمامرة"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnwladfraj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="أولاد \n فرج"
        app:layout_constraintEnd_toStartOf="@id/btnkhmis"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:drawableEnd="@drawable/location_svg"
        android:background="@drawable/rounded_corners_button"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="سيدي بنور"
        app:layout_constraintEnd_toStartOf="@id/btnwladfraj"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>