<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <ImageView
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:alpha="0.85"
        android:contentDescription="@string/cart_image"
        android:src="@mipmap/ic_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            app:columnCount="2">

            <TextView
                android:id="@+id/RNA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:padding="30dp"
                android:text="@string/السجل_الوطني_الفلاحي"
                android:textColor="?attr/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/ps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:padding="30dp"
                android:text="@string/الحماية_الإجتماعية"
                android:textColor="?attr/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_disabled"
                android:gravity="center"
                android:padding="30dp"
                android:text="@string/المقاولين_الشباب"
                android:textColor="?attr/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_disabled"
                android:gravity="center"
                android:padding="30dp"
                android:text="@string/التكوين_المهني"
                android:textColor="?attr/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corners_disabled"
                android:gravity="center"
                android:padding="30dp"
                android:text="@string/صندوق_التنمية_الزراعية"
                android:textColor="?attr/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
